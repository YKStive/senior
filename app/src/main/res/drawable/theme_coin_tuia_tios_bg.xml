<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#FBAE47"
                android:startColor="#FFC95A"
                android:type="linear" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffffff" />
            <corners android:radius="15dp" />
        </shape>
    </item>

</layer-list>