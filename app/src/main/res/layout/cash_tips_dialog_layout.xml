<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/content_group"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="49dp"
        android:layout_marginRight="49dp"
        android:background="@drawable/phone_verify_dialog_bg"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:includeFontPadding="false"
            android:text="提交成功"
            android:textColor="#ff333333"
            android:textSize="22dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="bottom|center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="提现金额： "
                android:textColor="#fff7612c"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/cash_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="0.3"
                android:textColor="#fff7612c"
                android:textSize="28dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:includeFontPadding="false"
                android:text="元"
                android:textColor="#fff7612c"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:includeFontPadding="false"
            android:text="您的提现人工审核中，请耐心等候"
            android:textColor="#ff999999"
            android:textSize="15dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/speed"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/cash_tips_dialog_speed_bg"
            android:gravity="center"
            android:text="不等了，立即加速"
            android:textColor="#ffffffff"
            android:textSize="20sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/content_group"
        android:layout_alignRight="@+id/content_group"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/login_close_icon" />
</RelativeLayout>
