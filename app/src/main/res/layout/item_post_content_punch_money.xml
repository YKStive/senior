<?xml version="1.0" encoding="utf-8"?>
<com.noober.background.view.BLConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="11dp"
    app:bl_corners_radius="2dp"
    app:bl_solid_color="#ffffc437">


    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableBottom="@drawable/ic_money"
        android:drawablePadding="3dp"
        android:text="@string/today"
        android:textColor="#FF9D725A"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.noober.background.view.BLTextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="16dp"
        android:paddingTop="3dp"
        android:paddingEnd="16dp"
        android:paddingBottom="3dp"
        android:text="已签到"
        android:textColor="#ffffff"
        app:bl_corners_radius="6dp"
        app:bl_gradient_endColor="#ffff9c3d"
        app:bl_gradient_startColor="#ffffb839"
        app:bl_gradient_type="linear"
        app:bl_gradient_useLevel="true"
        app:bl_stroke_color="#ffffc437"
        app:bl_stroke_width="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_date" />


</com.noober.background.view.BLConstraintLayout>