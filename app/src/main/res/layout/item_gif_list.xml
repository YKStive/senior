<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_gif"
        android:layout_width="168dp"
        android:layout_height="168dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.noober.background.view.BLTextView
        android:id="@+id/tv_make"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="22dp"
        android:paddingTop="3dp"
        android:paddingEnd="22dp"
        android:paddingBottom="3dp"
        android:text="@string/make"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:bl_corners_bottomLeftRadius="5dp"
        app:bl_corners_topLeftRadius="5dp"
        app:bl_gradient_angle="90"
        app:bl_gradient_endColor="#FFB43F"
        app:bl_gradient_startColor="#FCCB00"
        app:bl_gradient_type="linear"
        app:bl_gradient_useLevel="true"
        app:layout_constraintStart_toStartOf="@id/iv_gif"
        app:layout_constraintTop_toBottomOf="@id/iv_gif" />

    <com.noober.background.view.BLTextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="22dp"
        android:paddingTop="3dp"
        android:paddingEnd="22dp"
        android:paddingBottom="3dp"
        android:text="@string/use"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:bl_corners_bottomRightRadius="5dp"
        app:bl_corners_topRightRadius="5dp"
        app:bl_gradient_angle="90"
        app:bl_gradient_endColor="#FD7702"
        app:bl_gradient_startColor="#FF6A30"
        app:bl_gradient_type="linear"
        app:bl_gradient_useLevel="true"
        app:layout_constraintStart_toEndOf="@id/tv_make"
        app:layout_constraintTop_toTopOf="@id/tv_make" />

</androidx.constraintlayout.widget.ConstraintLayout>