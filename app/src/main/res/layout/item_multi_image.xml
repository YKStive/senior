<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/fl_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fl_header_container">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="#FF333333"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="今天你还没有签到哦，马上签到得金币！" />


        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:constraint_referenced_ids="iv1,iv2,iv3,iv4,iv5,iv6,iv7,iv8,iv9"
            app:flow_wrapMode="aligned"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_content" />

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="@dimen/app_multi_image_item_with"
            android:layout_height="@dimen/app_multi_image_item_with" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="@dimen/app_multi_image_item_with"
            android:layout_height="@dimen/app_multi_image_item_with" />

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="@dimen/app_multi_image_item_with"
            android:layout_height="@dimen/app_multi_image_item_with" />

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="@dimen/app_multi_image_item_with"
            android:layout_height="@dimen/app_multi_image_item_with" />

        <ImageView
            android:id="@+id/iv5"
            android:layout_width="@dimen/app_multi_image_item_with"
            android:layout_height="@dimen/app_multi_image_item_with" />

        <ImageView
            android:id="@+id/iv6"
            android:layout_width="@dimen/app_multi_image_item_with"
            android:layout_height="@dimen/app_multi_image_item_with" />

        <ImageView
            android:id="@+id/iv7"
            android:layout_width="@dimen/app_multi_image_item_with"
            android:layout_height="@dimen/app_multi_image_item_with" />

        <ImageView
            android:id="@+id/iv8"
            android:layout_width="@dimen/app_multi_image_item_with"
            android:layout_height="@dimen/app_multi_image_item_with" />

        <ImageView
            android:id="@+id/iv9"
            android:layout_width="@dimen/app_multi_image_item_with"
            android:layout_height="@dimen/app_multi_image_item_with" />


        <include
            layout="@layout/home_post_bottom_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/flow" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>