<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff3f3f3"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_browse_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="@dimen/dp_15"
        android:text="今天   201次浏览"
        android:textColor="#ff999999"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/bg_item"
        android:orientation="vertical"
        android:padding="@dimen/dp_15"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF333333"
            android:textSize="24sp"
            tools:text="今天你还没有签到哦，马上签到得金币！" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="0dp"
                android:layout_height="@dimen/app_multi_image_item_with"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@id/iv2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="#000000"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="0dp"
                android:layout_height="@dimen/app_multi_image_item_with"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="2dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv3"
                app:layout_constraintStart_toEndOf="@id/iv1"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="#000000"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="0dp"
                android:layout_height="@dimen/app_multi_image_item_with"
                android:layout_marginStart="2dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv2"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="#000000"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="0dp"
                android:layout_height="@dimen/app_multi_image_item_with"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@id/iv5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv1"
                tools:background="#000000"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/iv5"
                android:layout_width="0dp"
                android:layout_height="@dimen/app_multi_image_item_with"
                android:layout_alignTop="@id/iv4"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@id/iv4"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@id/iv6"
                app:layout_constraintStart_toEndOf="@id/iv4"
                app:layout_constraintTop_toBottomOf="@id/iv2"
                app:layout_constraintTop_toTopOf="@id/iv4"
                tools:background="#000000"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/iv6"
                android:layout_width="0dp"
                android:layout_height="@dimen/app_multi_image_item_with"
                android:layout_alignTop="@id/iv4"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@id/iv5"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv5"
                app:layout_constraintTop_toBottomOf="@id/iv3"
                app:layout_constraintTop_toTopOf="@id/iv4"
                tools:background="#000000"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/iv7"
                android:layout_width="0dp"
                android:layout_height="@dimen/app_multi_image_item_with"
                android:layout_below="@id/iv6"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@id/iv8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv4"
                tools:background="#000000"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/iv8"
                android:layout_width="0dp"
                android:layout_height="@dimen/app_multi_image_item_with"
                android:layout_alignTop="@id/iv7"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@id/iv7"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@id/iv9"
                app:layout_constraintStart_toEndOf="@id/iv7"
                app:layout_constraintTop_toBottomOf="@id/iv6"
                app:layout_constraintTop_toTopOf="@id/iv7"
                tools:background="#000000"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/iv9"
                android:layout_width="0dp"
                android:layout_height="@dimen/app_multi_image_item_with"
                android:layout_alignTop="@id/iv8"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@id/iv8"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv8"
                app:layout_constraintTop_toBottomOf="@id/iv6"
                app:layout_constraintTop_toTopOf="@id/iv7"
                tools:background="#000000"
                tools:visibility="visible" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="18dp"
            android:background="@color/line_color" />

        <include
            layout="@layout/item_post_bottom_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/flow" />
    </LinearLayout>


</LinearLayout>