<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <!--Clip-->
    <FrameLayout
        android:id="@+id/clip_wrapper"
        android:layout_width="243dp"
        android:layout_height="274dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/jl_pop_light_bj" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="64dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/theme_coin_tuia_tios_bg" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:src="@drawable/tost_jfdh_jb" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:src="@drawable/jl_pop_leftjb_img" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/theme_pop_close" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="70dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/jl_pop_rightjb_img" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="102dp">

            <TextView
                android:id="@+id/top_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="签到成功"
                android:textColor="#777777"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/title_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/theme_jl_pop_gx_title" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="125dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/coin_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+50"
                android:textColor="#fff6b300"
                android:textSize="32dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/coin_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="金币"
                android:textColor="#fff4b100"
                android:textSize="15dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="183dp"
            android:gravity="center"
            android:text="成为会员，签到奖励翻倍！"
            android:textColor="#555555"
            android:textSize="14dp" />


        <com.youloft.senior.widgt.PressFrameLayout
            android:id="@+id/button_text_group"
            android:layout_width="131dp"
            android:layout_height="46dp"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/qd_pop_kthy_buttun"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/button_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="开通会员"
                android:textColor="#ffff"
                android:textSize="17dp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/cash_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="再赚"
                    android:textColor="#ffffffff"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/cash_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:text="0.2"
                    android:textColor="#ffffffff"
                    android:textSize="28dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="#ffffffff"
                    android:textSize="19dp" />
            </LinearLayout>
        </com.youloft.senior.widgt.PressFrameLayout>
    </FrameLayout>

</FrameLayout>