<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <FrameLayout
        android:id="@+id/top_group"
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <TextView
            android:id="@+id/item_top_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="2020年5月19日"
            android:textColor="#ff999999"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="35dp"
            android:src="@drawable/home_qp_angle" />
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_group"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:background="@drawable/task_coin_item_sign_bg_selector">

        <TextView
            android:id="@+id/item_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="87dp"
            android:text="首次邀请好友赚金币"
            android:textColor="#ff333333"
            android:textSize="22dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginRight="15dp"
            android:text="15:52:12"
            android:textColor="#ff999999"
            android:textSize="18dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/item_coin_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/qd_jbcheck_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/item_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="+10000"
            android:textColor="#ffff9218"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/item_coin_icon"
            app:layout_constraintLeft_toRightOf="@+id/item_coin_icon"
            app:layout_constraintTop_toTopOf="@+id/item_coin_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>