<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.youloft.senior">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:name=".base.App"
        android:label="@string/app_name"
        android:supportsRtl="true"
        tools:replace="android:allowBackup"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="UMENG_APPKEY"
            android:value="5b581241b27b0a497c00003a" />
        <meta-data
            android:name="UMENG_MESSAGE_SECRET"
            android:value="621594bd4985f96707e1213e41e3b27a" /> <!-- 黄历详情 -->
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="wnl_master" />


        <activity android:name=".ui.home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.gif.ChoiceImageActivity" />
        <activity android:name=".ui.gif.GifActivity" />
        <activity android:name=".ui.detail.VideoDetailActivity" />

        <receiver
            android:name="com.youloft.calendar.MeizuMessageReceiver"
            tools:node="remove"
            android:enabled="false" />
        <receiver android:name=".MeizuMessageReceiver">
            <intent-filter>
                <!-- 接收push消息 -->
                <action android:name="com.meizu.flyme.push.intent.MESSAGE" />
                <!-- 接收register消息 -->
                <action android:name="com.meizu.flyme.push.intent.REGISTER.FEEDBACK" />
                <!-- 接收unregister消息-->
                <action android:name="com.meizu.flyme.push.intent.UNREGISTER.FEEDBACK" />
                <!-- 兼容低版本Flyme3推送服务配置 -->
                <action android:name="com.meizu.c2dm.intent.REGISTRATION" />
                <action android:name="com.meizu.c2dm.intent.RECEIVE" />

                <category android:name="${applicationId}" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".push.NotifyActivity"
            android:exported="true"
            android:launchMode="singleTask" />
    </application>


</manifest>